<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_file"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/activity_main_top_tab" />

    <android.support.v4.view.ViewPager
        android:id="@+id/id_page_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/wight" >
    </android.support.v4.view.ViewPager>

    <include 
        android:id="@+id/bottom_item1"
        android:visibility="visible"
        layout="@layout/bottom_item_clear_menu" />
    <include 
        android:id="@+id/bottom_item2"
        android:visibility="gone"
        layout="@layout/bottom_item_del_menu" />
    <include 
        android:id="@+id/bottom_item3"
        android:visibility="gone"
        layout="@layout/bottom_item_del_copy_clip_menu" />
    <include 
        android:id="@+id/bottom_item4"
        android:visibility="gone"
        layout="@layout/bottom_item_menu" />

</LinearLayout>